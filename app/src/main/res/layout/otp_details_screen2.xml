<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="5"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otpTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_bkg"
            android:padding="@dimen/extra_padding"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="35sp"
            android:textColor="@color/dark_col_blue"
            android:text="123456" />

        <TextView
            android:id="@+id/otp_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/appbar_padding_top"
            android:text="05:00"
            android:textColor="@color/cell_lgt_txt"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_item_border"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/sky_blue"
            app:srcCompat="@drawable/contact_img" />

        <TextView
            android:id="@+id/otpdetail_cntctName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/row_item_border"
            android:textSize="20sp"
            android:padding="@dimen/fab_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/otpdetail_mobno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/row_item_border"
            android:padding="@dimen/fab_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/extra_padding"
        android:layout_marginBottom="@dimen/appbar_padding"
        android:padding="@dimen/appbar_padding"
        android:orientation="horizontal">

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/appbar_padding_top"
            android:background="@drawable/btn_round_corner"
            android:text="@string/proceed_txt"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@color/new_bkg" />
    </LinearLayout>

</LinearLayout>